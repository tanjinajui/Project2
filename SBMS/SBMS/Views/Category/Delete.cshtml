@model SBMS.Model.Model.Category

@{
    ViewBag.Title = "Delete Category";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

@if (TempData["notice"] != null)
{<div class="alert alert-success" style="float: none; align-content: center" role="alert">
        <b>@TempData["notice"]</b>
    </div>

}


<script src="~/Scripts/jquery-1.9.1.js"></script>
<script src="~/Scripts/jquery.min.js"></script>
<link href="~/bootstrap/css/bootstrap.min.css" rel="stylesheet" />
<script src="~/bootstrap/js/bootstrap.min.js"></script>
<link href="~/Content/Site.css" rel="stylesheet" />


<script type="text/javascript">
    $.noConflict();
</script>



<div class="container">

    <div class="logo col-sm-12 text-center col-md-12 ">
        <img alt="" src="~/Images/dotnetsai.png" />
    </div>

    <div class="clearfix"></div>


    @using (Html.BeginForm())
    {
        @Html.ValidationSummary(true)
        @Html.AntiForgeryToken()
        <fieldset>
            <legend class="legend">Delete Category</legend>

            <div class="panel">

                <div class="panel-body">

                    <div>
                        @Html.ActionLink("Category List", "Index", "Category", new { @class = "btn btn-info btn-pressure" })
                    </div>

                    <div class="row">
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.CatID, new { @class = "hidden" })

                        </div>
                        <div class="col-md-3">
                            @Html.TextBoxFor(model => model.CategoryName, new { @class = "form-control" })
                            @Html.ValidationMessageFor(model => model.CategoryName)
                        </div>

                    </div>


                    <div style="margin-top: 5px"></div>
                    <div class="row">
                        <div class="col-md-12">
                            <input type="submit" class="btn btn-success" name="actionType" value="Update" />
                            @Html.ActionLink("Cancel", "Index", "Category", new { @class = "btn btn-success" })
                        </div>
                    </div>

                </div>
            </div>
        </fieldset>
    }



    @section Scripts {
        @System.Web.Optimization.Scripts.Render("~/bundles/jqueryval")
    }
</div>



